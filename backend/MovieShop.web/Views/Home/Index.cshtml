@model IEnumerable<MovieShop.Core.Models.Response.MovieResponseModel>

@{
    ViewData["Title"] = "Home Page";
}


<div class="container-fluid bg-light">
    <div class="row">
        @foreach(var movie in Model)
        {
            <div class="col-6 col-lg-3 col-sm-4 col-xl-2">

                @*call our Movie card from here*@

                @await Html.PartialAsync("_MovieCard", movie)
                @*another way to do this
                <partial name="_MovieCard" model="movie" />*@
                
            </div>
        }
    </div>
</div>
